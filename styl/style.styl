.titlebar
    height              titlebarHeight
    box-sizing          border-box
    background          #333
    color               #aaa
    font-size           14px
    padding-top         3px
    padding-left        70px
    padding-right       70px
    -webkit-app-region  drag
    position            absolute
    top                 0
    left                0
    right               0

.titlebar span
    position            relative
    
.titlebar span::before
    content             attr(data-tip)
    position            absolute
    z-index             999
    white-space         nowrap
    background          #333
    opacity             0  
    top                 9999px
    transition          opacity 0.2s ease-out 
     
.titlebar span:hover::before
    opacity             1
    top                 0px
    
