.line
    background          #444
    position            absolute
    overflow            visible

.line.vertical
    width               1px
    height              5px
    &._10
        height          10px
    &._50
        height          15px
    &._100
        height          15px

.line.horizontal
    height              1px
    width               5px
    &._10
        width           10px
    &._50
        width           15px
    &._100
        width           15px

.line._10
    background          #888
.line._50
    background          #888
    & .num
        color           #444
.line._100
    background          #fff
    & .num
        color           #888

.num    
    text-align          center
    margin-top          17px
    width               100px
    margin-left         -50px

