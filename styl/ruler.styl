.handle
    position            absolute
    
#left
    left                0
    
#right
    right               0
    
.dot
    width               1px
    height              15px
    
.white
    background          white
.black
    background          black
    
#size
    position            absolute
    text-align          right
    right               1px
    top                 17px
    color               #fff
    background          linear-gradient(to left,#222, #222 20px,rgba(0,0,0,0) 60px)
    padding-left        60px
    padding-right       2px
    