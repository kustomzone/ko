*
    outline-width       0
    
body
    fill-abs()
    margin              0
    background          #222
    color               #bbb
    overflow            hidden
    font-family         font
    font-size           10px
    -webkit-user-select none
    -webkit-app-region  drag
    cursor              pointer      

#ruler
    fill-abs()
    cursor              pointer      

